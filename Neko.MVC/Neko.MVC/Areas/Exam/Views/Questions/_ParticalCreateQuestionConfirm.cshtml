@{
}

<div class="modal" id="ConfirmQuestionType" role="dialog" data-url="Create">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">请选择问题类型</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label class="control-label">问题类型:</label>
                <div>
                    <select id="questionType" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Neko.App.Models.Exam.QuestionType))"></select>
                </div>
            </div>
            <div class="modal-footer">
                <a id="btnConfirm" class="btn btn-primary pull-right">确定</a>
            </div>
        </div>
    </div>
</div>