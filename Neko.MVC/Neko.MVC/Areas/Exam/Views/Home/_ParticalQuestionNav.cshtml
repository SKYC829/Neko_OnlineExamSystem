@model Neko.App.Models.Exam.ExamPaperInfo
@using Neko.App.Models.Exam;

<nav id="questionNav" class="navbar flex-column ml-4">
    <ul class="nav nav-pills">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            QuestionInfo question = Model.Questions.ElementAt(i);
            <li class="nav-item mt-3">
                @Html.ActionLink(string.Format("第{0}题", i), "", new { }, new { @class = "nav-link", href = string.Format("#{0}_{1}", i, question.Id) })
            </li>
        }
    </ul>
</nav>