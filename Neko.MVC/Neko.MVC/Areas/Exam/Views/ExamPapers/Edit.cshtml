@model Neko.App.Models.Exam.EditExamPaperInfo

@{
    ViewData["Title"] = "编辑考卷";
}

<div class="alert alert-info" role="alert">
    <h4 class="alert-heading">编辑考卷</h4>
    <p>你可以在这里编辑一个试卷的信息</p>
    <hr />
</div>
<form asp-area="Exam" asp-controller="ExamPapers" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="ml-4 mr-3">
            @{ await Html.RenderPartialAsync("_ParticalExamPaperEdit", Model);}
        </div>
        <div class="col-md">
            @{ await Html.RenderPartialAsync("_ParticalExamQuestionEdit", Model);}
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="保存" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-area="Exam" asp-controller="ExamPapers" asp-action="Index">返回</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/ImportQuestion.js"></script>
}
