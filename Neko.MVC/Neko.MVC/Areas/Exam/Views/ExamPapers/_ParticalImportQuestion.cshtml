<div class="modal" id="ImportQuestion" role="dialog" data-url="Create">
    <div class="modal-dialog modal-dialog-centered data-backdrop='static'" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">请选择问题</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="questionTable" class="table text-center">
                    <thead>
                        <tr>
                            <th><input id="selectAll" type="checkbox" title="全选" /></th>
                            <th>题目</th>
                            <th>类型</th>
                        </tr>
                    </thead>
                    <tbody id="questionTableBody">

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <a id="btnConfirm" class="btn btn-primary pull-right">确定</a>
                <a id="btnCancel" class="btn btn-secondary pull-right">取消</a>
            </div>
        </div>
    </div>
</div>