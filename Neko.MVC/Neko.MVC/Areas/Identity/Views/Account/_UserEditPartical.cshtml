@model Neko.App.Models.Identity.SignUpUserInfo
@{
}
<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="WorkId" class="control-label"></label>
    @if (ViewBag.IsEdit)
    {
        <input asp-for="WorkId" readonly class="form-control" />
    }
    else
    {
        <input asp-for="WorkId" class="form-control" />
    }
    <span asp-validation-for="WorkId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="UserName" class="control-label"></label>
    <input asp-for="UserName" class="form-control" />
    <span asp-validation-for="UserName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Password" class="control-label"></label>
    <input asp-for="Password" class="form-control" />
    <span asp-validation-for="Password" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PasswordConfirm" class="control-label"></label>
    <input asp-for="PasswordConfirm" class="form-control" />
    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RoleId" class="control-label"></label>
    @*<input asp-for="RoleId" class="form-control" />*@
    @Html.DropDownListFor(p => p.RoleId, ViewBag.Roles as IEnumerable<SelectListItem>, null, new { @class = "form-control" })
    <span asp-validation-for="RoleId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Remark" class="control-label"></label>
    <input asp-for="Remark" class="form-control" />
    <span asp-validation-for="Remark" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="保存" class="btn btn-primary" />
    <a class="btn btn-secondary" asp-area="Identity" asp-controller="Account" asp-action="Index">返回</a>
</div>